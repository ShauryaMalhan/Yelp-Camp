<% layout('layouts/boilerplate') %>
<h1>All Campgrounds</h1>
<div>
    <a href="/campground/new">Make a New Camp</a>
</div>
<% for(let camp of campground) {%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img src="<%= camp.image %>" alt="" class="img-fluid">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= camp.title %></h5>
                    <p class="card-test"><%= camp.description %></p>
                    <p class="card-test">
                        <small class="text-muted"><%= camp.location %></small>
                    </p>
                    <a class="btn btn-primary" href="/campground/<%= camp.id %>">View: <%= camp.title %></a>
                </div>
            </div>
        </div>
    </div>
<% } %>