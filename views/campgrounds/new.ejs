<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campground" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title: </label>
                <input class="form-control" type="text" name="campground[title]" id="title" placeholder="Title">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location: </label>
                <input class="form-control" type="text" name="campground[location]" id="location" placeholder="Location">
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price: </label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" placeholder="0.00" id="price" aria-label="price" aria-describedby="price-label" name="campground[price]">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image: </label>
                <input class="form-control" type="text" name="campground[image]" id="location" placeholder="Image">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Description: </label>
                <textarea class="form-control" type="text" name="campground[description]" id="location" placeholder="Description"></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success" type="submit">Submit</button>
            </div>
        </form>
        <a href="/campground">Cancel</a>
    </div>
</div>