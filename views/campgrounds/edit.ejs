<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campground/<%= campground._id %>?_method=PUT" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label class="form-label" for="title">Title: </label>
                <input class="form-control" value="<%= campground.title %>" type="text" name="campground[title]" id="title" placeholder="Title" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location: </label>
                <input class="form-control" type="text" value="<%= campground.location %>" name="campground[location]" id="location" placeholder="Location" required>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price: </label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" value="<%= campground.price %>" placeholder="0.00" id="price" aria-label="price" aria-describedby="price-label" name="campground[price]" required>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image: </label>
                <input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]" id="location" placeholder="Image" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Description: </label>
                <textarea class="form-control" type="text" name="campground[description]" id="location" placeholder="Description" required><%= campground.description %></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success" type="submit">Submit</button>
            </div>
        </form>
        <a href="/campground/<%= campground._id %>">Back to Campground</a>
    </div>
</div>